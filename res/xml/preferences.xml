<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Enable Security Levels">

        <CheckBoxPreference
                android:key="security_level_0"
                android:title="Private"
                android:summary="Security level that requires authentication every time." />
        
        <CheckBoxPreference
                android:key="security_level_1"
                android:title="High"
                android:summary="Stays available while in contact. (Requires Accelerometer)" />
        
        <CheckBoxPreference
                android:key="security_level_2"
                android:title="Medium"
                android:summary="Stays available after losing contact. (Requires Timeout)" />
        
        
        <CheckBoxPreference
                android:key="security_level_3"
                android:title="Low"
                android:summary="Stays available in familiar locations. (Requires GPS)" />
        
        <CheckBoxPreference
                android:key="security_level_4"
                android:title="Public"
                android:summary="Will always be available." />

    </PreferenceCategory>

    <PreferenceCategory
            android:title="Enable Triggers">

        <CheckBoxPreference
                android:key="trigger_0"
                android:title="Timeout"/>
        
        <CheckBoxPreference
                android:key="trigger_1"
                android:title="Accelerometer"/>
        
        <CheckBoxPreference
                android:key="trigger_2"
                android:title="GPS"/>

    </PreferenceCategory>

    <PreferenceCategory
        	android:title="Other">
        <EditTextPreference
                android:key="edittext_preference"
                android:title="Random Text Edit"
                android:summary="click here to edit the text on main page"
                android:dialogTitle="Enter New Text" />
    </PreferenceCategory>
</PreferenceScreen>